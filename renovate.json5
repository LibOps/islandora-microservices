{
  extends: [
    'config:best-practices',
    ':rebaseStalePrs',
  ],
  packageRules: [
    {
      matchPackageNames: [
        'hashicorp/terraform',
      ],
      enabled: false,
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'digest',
      ],
      groupName: 'bump-dependencies',
      schedule: [
        'after 10pm on Friday',
      ],
      matchPackageNames: [
        '*',
      ],
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      groupName: 'all major updates',
      schedule: [
        'after 10pm on the first day of the month',
      ],
      matchPackageNames: [
        '*',
      ],
    },
  ]

  ],
  labels: [
    'dependencies',
  ],
  osvVulnerabilityAlerts: true,
  dependencyDashboardOSVVulnerabilitySummary: 'unresolved',
  vulnerabilityAlerts: {
    enabled: true,
  },
}

